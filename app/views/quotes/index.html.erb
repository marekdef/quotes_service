<h1>Listing quotes</h1>

<table>
  <tr>
    <th>Content</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @quotes.each do |quote| %>
<% @user = User.find_by_id(quote.user_id) %>
  <tr>
    <td><%= quote.content %></td>
    <td><%= @user.first_name %> <%= @user.last_name %></td>
    <td><%= link_to 'Show', quote_path(quote) %></td>
    <td><%= link_to 'Edit', edit_quote_path(quote) %></td>
    <td><%= link_to 'Destroy', quote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Quote', new_quote_path %>
